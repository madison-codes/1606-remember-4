<article {{ action 'saveNew' reminder bubbles=false}}>
  {{#if isEditing}}

  <form class="edit-reminder" {{action 'saveEdited' reminder on="submit" bubbles=false}}>
    <label>
      Title
      {{input class="edit-title-input" value=model.title}}
    </label>
    <label>
      Notes
      {{input class="edit-notes-input" value=model.notes}}
    </label>
    <label>
      Date
      {{input class="edit-date-input" value=model.date}}
    </label>
    <button class="edit-reminder">Save</button>
  </form>

  {{else}}

  <section class="clicked-reminder">
    <h1 class="reminder-title">{{model.title}}</h1>
    <p class="reminder-notes">{{model.notes}}</p>
    <p>{{model.id}}</p>
    <p>{{model.date}}</p>
    <button class="edit-reminder" {{ action 'editReminder' bubbles=false}}>Editing?</button>
  </section>

  {{/if}}
</article>
